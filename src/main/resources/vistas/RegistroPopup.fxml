<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxWidth="800.0" minWidth="650" prefHeight="800" prefWidth="700.0" spacing="20" styleClass="login-card" stylesheets="@../estilos/general.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegistroPopupController">    
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
    
    <Label styleClass="form-title" text="Crear Cuenta">
        <font>
            <Font size="22" />
        </font>
    </Label>
    
    <Label styleClass="subtitle" text="Completa los datos para registrarte" />
    
    <VBox spacing="6">
        <Label styleClass="field-label" text="USUARIO" />
        <TextField fx:id="campoUsuario" prefWidth="350" promptText="Ej: ejem123_" styleClass="custom-field" />
    </VBox>
    
    <VBox spacing="6">
        <Label styleClass="field-label" text="EMAIL" />
        <TextField fx:id="campoEmail" prefWidth="350" promptText="Ej: mail@gmail.com" styleClass="custom-field" />
    </VBox>
    
    <VBox spacing="6">
        <Label styleClass="field-label" text="NOMBRE COMPLETO" />
        <TextField fx:id="campoNombreCompleto" prefWidth="350" promptText="Ej: Nombre Apellido" styleClass="custom-field" />
    </VBox>
    
    <VBox spacing="6">
        <Label styleClass="field-label" text="CONTRASEÑA" />
        <PasswordField fx:id="campoPassword" prefWidth="350" promptText="Mínimo 6 caracteres" styleClass="custom-field" />
    </VBox>
    
    <VBox spacing="6">
        <Label styleClass="field-label" text="CONFIRMAR CONTRASEÑA" />
        <PasswordField fx:id="campoConfirmarPassword" prefWidth="350" promptText="Repite tu contraseña" styleClass="custom-field" />
    </VBox>
    
    <VBox spacing="6">
        <Label styleClass="field-label" text="ROL" />
        <ComboBox fx:id="comboRole" prefWidth="350" promptText="Selecciona un rol" styleClass="custom-field" />
    </VBox>
    
    <Label fx:id="errorLabel" managed="false" styleClass="error-label" visible="false" />
    
    <HBox alignment="CENTER" spacing="15">
        <padding>
            <Insets top="10" />
        </padding>
        
        <Button fx:id="btnCancelar" onAction="#cancelar" prefWidth="165" styleClass="button-cancel" text="CANCELAR">
            <font>
                <Font name="System Bold" size="13" />
            </font>
        </Button>
        
        <Button fx:id="btnRegistrar" onAction="#registrarUsuario" prefWidth="165" styleClass="button-login" text="REGISTRAR">
            <font>
                <Font name="System Bold" size="13" />
            </font>
        </Button>
    </HBox>
    
</VBox>
